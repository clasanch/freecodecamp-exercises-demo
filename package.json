{
  "name": "freecodecamp-exercises-demo",
  "version": "1.0.0",
  "description": "Repositorio completo de ejercicios de FreeCodeCamp con CI/CD y mejores prácticas",
  "main": "src/index.js",
  "type": "module",
  "keywords": [
    "freecodecamp",
    "algorithms",
    "data-structures",
    "javascript",
    "programming",
    "coding-challenges",
    "tdd",
    "clean-code"
  ],
  "author": "Claudio Sánchez",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/.bin/jest --ci --coverage --watchAll=false --passWithNoTests",
    "lint": "eslint src tests --ext .js,.mjs,.ts",
    "lint:fix": "eslint src tests --ext .js,.mjs,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,mjs,ts,json,md}\" \"tests/**/*.{js,mjs,ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,mjs,ts,json,md}\" \"tests/**/*.{js,mjs,ts,json,md}\"",
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "clean": "rm -rf dist coverage .nyc_output",
    "prepare": "husky",
    "validate": "npm run lint && npm run format:check && npm run test:ci"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
